  <div class="ui segment">
    <div class="ui list">
      <% @placements.each do |placement| %>
        <div class="upcoming-card bg-info rounded">

          <div class="upcoming-card-site d-flex justify-content-between p-2">

            <div class="image-square">
              <%= cl_image_tag placement.project.site.photo.key, width: 48, height: 48, crop: :fit%>
            </div>

            <div class="upcoming-card-site-left flex-grow-1 px-2 d-flex align-items-center">
              <h3 class="m-0"><%= placement.project.site.name %> - <%= placement.project.job_type %></h3>
            </div>

            <div class="upcoming-card-site-right d-flex align-items-center">
              <p class="mr-2"><span class="badge-pill bg-primary text-dark"><%= placement.project.start_date %></span> - <span class="badge-pill bg-primary text-dark"><%= placement.project.end_date %></span></p>
            </div>
          </div>

          <div class="upcoming-card-project d-flex justify-content-between p-3">

            <div class="upcoming-card-project-left flex-grow-1">
              <p><strong>Job Description:</strong></p>
              <p><%= placement.project.description.capitalize %></p>
              <br>
              <p><strong>Address:</strong></p>
              <p><%= placement.project.site.location %></p>
            </div>

            <div class="upcoming-card-project-right rounded bg-success p-2 text-white">
              <% days = (placement.project.end_date - placement.project.start_date).to_i %>
              <p><span>Length:</span> <%= days %> days</p>
              <hr>
              <p>Wage: <%= number_to_currency(placement.project.wage, unit: "Â£", precision: 0) %>/hr</p>
            </div>
          </div>

          <div class="upcoming-card-message pl-3 pb-4 mb-3">
            <% if current_user.manager %>
              <% username = placement.user.first_name + " " + placement.user.last_name%>
              <% if placement.conversation.nil? %>
                <%= link_to "Message #{username}", placement_conversations_path(placement), method: :post %>
              <% else %>
                <%= link_to "Message #{username}", user_conversation_messages_path(placement.project.site.user, placement.conversation) %>
              <% end %>
            <% else %>
              <% username = placement.project.site.user.first_name + " " + placement.project.site.user.last_name %>
              <% if placement.conversation.nil? %>
                <%= link_to "Message #{username}", placement_conversations_path(placement), method: :post, class: "btn btn-primary" %>
              <% else %>
                <%= link_to "Message #{username}", user_conversation_messages_path(placement.user, placement.conversation), class: "btn btn-primary" %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
