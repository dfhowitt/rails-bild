<div class="container">
  <div class="header-photo d-flex justify-content-center">
  <%= cl_image_tag @project.site.photo.key, height: 150, width: 300, alt: "Company Logo" %>
  </div>
  <% project_length = (@project.end_date - @project.start_date).to_i%>
  <div class="project-header d-flex justify-content-between border-bottom">
    <div class="project-header-left">
      <h1><%= @project.site.name %> </h1>
      <h3><%= @project.site.location%></h3>
    </div>
    <div class ="project-header-right justify-content-between">
      <p><%=@project.capacity%> spots left! </p>
      <%= link_to 'Back to search', projects_path %>
    </div>
  </div>
  <div class="project-show-card d-flex">
      <div class="project-show-card-info mt-5 d-flex">
        <div class="project-show-card-left">
          <h3><%= @project.job_type %> <%= number_to_currency(@project.wage, unit: "Â£", precision: 0) %>/hr </h3>
          <h3><%= @project.site.site_type %> development</h3>
          <h5><%= @project.description.capitalize%></h5>
          <p><% @project.autoconfirm %></p>
          <p>Qualifications needed: <% @project.project_qualifications.each do |pqualification| %>
            <%= pqualification.qualification.name %>
            <% end %>
            </p>
        </div>
      <div class="project-show-card-right">
        <h3>Start: <%= @project.start_date.strftime('%a %b %d') %> </h3>
        <h3>End: <%= @project.end_date.strftime('%a %b %d') %></h3>
        <h4>
          <% if @project.autoconfirm %>
            Autoconfirm: <i class="fa fa-check" aria-hidden="true"></i>
          <% else %>
            Autoconfirm: <i class="far fa-times-circle"></i>
          <% end %>
        </h4>
          <div class="apply-button" id="sweet-alert-apply">
            <%= simple_form_for [@project, @placement] do |f| %>
            <%= f.submit "Apply now", class: "btn btn-primary" %>
            <%= link_to "", project_path(@project), id: "sweet-alert-apply", class: "hidden" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>


