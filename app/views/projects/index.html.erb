<div class="container">

  <div class="dashboard-search">
    <form method="get" action="/projects" class="w-200 p-3" >

      <input type="text" name="query" autocomplete="off" placeholder="<%= params[:query] %>" tabindex="100" class="form-control w-25" id="#flat_address">

      <div class="filter-site-type">
        <select id="site_type" name="site_type" class="form-control h-1.9 w-500">
          <option value="commercial">Commercial</option>
          <option value="residential">Residential</option>
          <option value="industrial">Industrial</option>
        </select>
      </div>

      <div class="filter-wage">
        <input type="number" name="wage" autocomplete="off" placeholder="Enter Minimum Wage" tabindex="100" class="form-control" id="min-wage">
      </div>

      <div class="filter-start-date">
        <input type="date" name="start_date" autocomplete="off" placeholder="Enter Start Date" tabindex="100" class="form-control" id="start-date">
      </div>

      <input type="submit" value="Search" class="btn btn-flat">
        <input type="checkbox" name="autoconfirm" class="m-2" id="autoconfirm">
        <label for="autoconfirm" class = "">Auto-confirm only</label>

    </form>
  </div>

  <div class="projects-contatiner d-flex">
      <div class="projects-card-holder w-800">

        <h2>Results for "<%= @query %>":</h2>

        <!-- START testing unavailable date funcationality -->
        <p> all: <% @all_placement_dates.each do |date| %>
                       <%= date %>
                     <% end %>
        </p>
        <p> confirmed: <% @confirmed_placement_dates.each do |date| %>
                       <%= date %>
                     <% end %>
        </p>
        <!-- END -->

        <% unless @results %>
          <div class="">
            <p class="no-results"><i class="fas fa-times text-danger"></i>  No results for "<%= @query %></p>
          </div>
          <h2>We suggest:</h2>
        <% end %>

        <% @projects.each do |project| %>
          <div class="project-card d-flex">
            <div class="project-card-photo">
              <%= cl_image_tag project.site.photo.key, width: 150, crop: :fit%>
            </div>
            <div class="project-card-details d-flex">
              <div class="project-title">
                <h2><%= link_to project.job_type, project_path(project) %></h2>
                <h6><%= project.site.location %></h6>
                <p>Length: <%= (project.end_date - project.start_date).to_i %></p>
              </div>
              <div class="project-dates">
                <p>Start: <%= project.start_date.strftime('%a %b %d') %> </p>
                <p>End: <%=  project.end_date.strftime('%a %b %d') %> </p>
              </div>

                <p><%= number_to_currency(project.wage, unit: "Â£", precision: 0) %> / per hour</p>

            </div>
            <div class="apply-button">
              <% project_dates = (project.start_date .. project.end_date) %>
              <% @confirmed_placement_dates.each do |dates| %>
                <% dates.to_a %>
                <% project_dates.to_a %>
                <% if project_dates.first <= dates.last && dates.first <= project_dates.last %>
                  <p> CONFLICT</p>
                <% else %>
                  <p>Spots remaining: <%= project.capacity - project.placements.where(confirmed: true).count %></p>
                <% end %>
              <% end %>

              <%= simple_form_for [project, @placement], remote: true do |f| %>
                <%= f.submit "Apply now" %>
                <% if project.autoconfirm == true %>
                  <p>Instant Confirm!</p>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>



      <div id="map"
       style="width: 600px; height: 100vh; position: sticky; top: 0;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>

