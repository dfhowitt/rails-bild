<div class="container">
  <div class="dashboard-search">
    <form method="get" action="/projects" class="w-50 p-3">
      <input type="text" name="query" autocomplete="off" placeholder="Enter Postcode" tabindex="100" class="form-control" id="flat_address">
      <input type="submit" value="Search" class="btn btn-flat">
    </form>
  </div>
  <div class="projects-contatiner d-flex">
    <div class="projects-card-holder">

      <h2>Results for "<%= @query %>":</h2>

      <!-- START testing unavailable date funcationality -->
      <p> Unavail: <% @unavailable_dates.each do |date| %>
                     <%= date %>
                   <% end %>
      </p>
      <!-- END -->

      <% unless @results %>
        <div class="">
          <p class="no-results"><i class="fas fa-times text-danger"></i>  No results for "<%= @query %></p>
        </div>
        <h2>We suggest:</h2>
      <% end %>

      <% @projects.each do |project| %>
        <div class="project-card d-flex">

          <%= link_to project_path(project), :class => "project-card-link" do  %>
            <div class="project-card-body d-flex">
              <div class="project-card-photo">
                <%= cl_image_tag project.site.photo.key, height: 50, width: 60, alt: "Company Logo" %>
              </div>

              <div class="project-details">
                <h5><%= project.job_type %></h5>
                <% project_dates = (project.start_date .. project.end_date) %>
                <% @unavailable_dates.each do |dates| %>
                  <% dates.to_a %>
                  <% project_dates.to_a %>
                  <% if project_dates.first <= dates.last && dates.first <= project_dates.last %>
                    <p> CONFLICT</p>
                  <% end %>
                <% end %>
                <p><%= project.start_date %> </p>
                <p><%=  project.end_date %> </p>
                <p>Pay: <%= project.wage %></p>
                <p>Spots Left: <%= project.capacity - project.placements.where(confirmed: true).count %></p>
                <p>Length: <%= (project.end_date - project.start_date).to_i %></p>
              </div>

              <div class="project-location">
                <h6><%= project.site.location %></h6>
              </div>
            </div>
          <% end %>

          <div class="apply-button">
            <%= simple_form_for [project, @placement] do |f| %>
              <%= f.submit "Apply now"%>
              <p>Autoconfirm?: <%= project.autoconfirm %></p>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>


    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>

