<div class="container">
  <div class="project-contatiner">

    <div class="project-card-holder">
      <% @projects.each do |project| %>
      <div class="project-card">
        <h1><%= project.site.location %></h1>
        <h2><%= project.job_type %></h2>
        <p><%= project.description %></p>
        <p><%= project.wage %></p>
        <p><%= project.capacity %></p>
        <p><%= project.start_date %></p>
        <p><%= project.end_date %></p>
        <%= link_to 'view more', projects_patch(project)  %>
        <%= link_to 'apply', project_placements(project) %>
      <% end %>
      </div>
    </div>


    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>

