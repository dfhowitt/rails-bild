<div class="container">
  <h1><i class="fas fa-user-circle"></i> My Profile</h1>
  <br>
  <div class="user-avatar">
    <% if @user.avatar.attached? %>
      <%= cl_image_tag @user.avatar.key, height: 150, width: 150, crop: :fill, class: "user-avatar" %>
    <% else %>
      <%= image_tag("avatar-placeholder1.jpg", class: "empty-avatar") %>
      <%= link_to edit_user_path(current_user) do %>
        <i class="fas fa-edit edit-avatar"></i>
      <% end %>
    <% end %>
  </div>
  <br>
  <div class="profile-info-list">
    <ul>
      <li>First Name: <%= @user.first_name %>
        <hr>
      </li>
      <li>Last Name: <%= @user.last_name %>
        <hr>
      </li>
      <li>Email: <%= @user.email %>
        <hr>
      </li>
      <li>Mobile Number: <%= @user.phone_number %>
        <hr>
      </li>
      <li>Address: <%= @user.address %>
        <hr>
      </li>
      <div id="average-rating">
        <%= @average_rating %>
      <hr>
      </div>
    </ul>
  </div>
  <div class="btn btn-primary edit-details">
    <%= link_to "Edit My Details", edit_user_path(current_user) %>
  </div>

</div>




