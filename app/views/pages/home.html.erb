<h2 style="margin-left: 195px">Recently Added Jobs</h2>

<br>
<br>

<div class="grid-container">
  <div class="home-projects-grid mx-3">
      <%@projects.each do |project|%>
        <%= link_to project_path(project) do %>
          <div class="homepage-project-card">
            <%= cl_image_tag project.site.photo.key %>
            <% if project.site.photo.attached? %>
              <div class="homepage-project-card-info">
                <div class="bottom text-right px-2 py-1">
                  <h5><%= project.job_type %></h5>
                  <p><%= project.capacity %> jobs left · <%=number_to_currency(project.wage, unit: "£", precision: 0) %>/hr </p>
                  <p><%=project.start_date.strftime('%A %e %B') %> to <%=project.end_date.strftime('%A %e %B') %></p>
                  <p><%= project.site.location %></p>
                </div>
              </div>
            <% else %>
              <div class="homepage-project-card-photo" style="background-color: $light-gray"></div>
            <% end %>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>



